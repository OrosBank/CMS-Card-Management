@model Cards.Models.ViewModels.CustomerViewModel.ModalFooter

<div class="modal-footer col-md-6">
    <button data-dismiss="modal" id="@Model.CancelButtonID" class="btn btn-danger" type="button">@Model.CancelButtonText</button>
    @if (!Model.OnlyCancelButton)
    {
        <button class="btn btn-success" id="@Model.SubmitButtonID" type="submit">
            @Model.SubmitButtonText
        </button>
    }
</div>
