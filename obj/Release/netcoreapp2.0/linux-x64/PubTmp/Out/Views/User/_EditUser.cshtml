@using Cards.Models.ViewModels.CustomerViewModel;
@model EditUserViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<form asp-action="EditUser" role="form">
    @*@await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = "Edit User" })*@
    <div class="form-horizontal col-md-6">

        <div class="form-group">
            <label asp-for="Name" class="col-md-4 control-label"></label>
            <div class="col-md-8">
                <input asp-for="Name" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="col-md-4 control-label"></label>
            <div class="col-md-8">
                <input asp-for="Email" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ApplicationRoleId" class="col-md-4 control-label"></label>
            <div class="col-md-8">

                <select asp-for="ApplicationRoleId" class="form-control" asp-items="@(new SelectList(ViewBag.RoleList, "Id", "Name"))">
                    <option>Please select Role</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="form-group">
                <label asp-for="BranchId" class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    <select asp-for="BranchId" class="form-control" asp-items="@(new SelectList(ViewBag.branch, "Id", "BranchName"))">
                        <option>Please select Branch</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            @Html.Partial("_ModalFooter", new ModalFooter { })
        </div>
    </div>

</form>















