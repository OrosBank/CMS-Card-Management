@{
    Layout = "~/Views/Shared/_defaultview.cshtml";
}

<!-- Dashboard Header Section    -->
<section class="dashboard-header">
    <div class="container-fluid">
        <div class="row">
            <!-- Statistics -->
            <div class="statistics col-md-6">

                <div class="statistic d-flex align-items-start bg-white has-shadow" style="height:100px">
                    <div class="icon bg-red"><i class="fa fa-tasks"></i></div>
                    <div class="text"><strong>@ViewBag.visaNGNCards</strong><br><small>Visa NGN Cards</small></div>
                </div>
                <div class="statistic d-flex align-items-lg-start bg-white has-shadow" style="height:100px">
                    <div class="icon bg-green"><i class="fa fa-calendar-o"></i></div>
                    <div class="text"><strong>@ViewBag.masterUSDCards</strong><br><small>Master USD Cards</small></div>
                </div>
            </div>
            <div class="statistics col-md-6">
                <div class="statistic d-flex align-items-start bg-white has-shadow" style="height:100px">
                    <div class="icon bg-green"><i class="fa fa-calendar-o"></i></div>
                    <div class="text"><strong>@ViewBag.masterNGNCards</strong><br><small>Master NGN Cards</small></div>
                </div>

                <div class="statistic d-flex align-items-start bg-white has-shadow" style="height:100px">
                    <div class="icon bg-orange"><i class="fa fa-paper-plane-o"></i></div>
                    <div class="text"><strong>@ViewBag.verveNGNCards</strong><br><small>Verve NGN Cards </small></div>
                </div>
            </div>
        </div>
    </div>
</section>